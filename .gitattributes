# Auto detect text files and normalize line endings to LF
* text=auto eol=lf

# Explicitly declare text files you want to always be normalized and converted to LF on checkout
*.java text eol=lf
*.gradle text eol=lf
*.kt text eol=lf
*.kts text eol=lf
*.xml text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.properties text eol=lf
*.toml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.html text eol=lf
*.css text eol=lf
*.js text eol=lf
*.ts text eol=lf

# Shell scripts must have LF (even on Windows)
*.sh text eol=lf
gradlew text eol=lf

# Windows scripts must have CRLF
*.bat text eol=crlf
*.cmd text eol=crlf
*.ps1 text eol=crlf

# Binary files (should not be modified)
*.jar binary
*.war binary
*.ear binary
*.zip binary
*.tar binary
*.gz binary
*.tgz binary
*.7z binary
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.bmp binary
*.ico binary
*.pdf binary
*.class binary
*.so binary
*.dll binary
*.dylib binary
